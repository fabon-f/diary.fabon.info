---
export interface Props {
	title: string
    path: string
    description?: string
    disableOgp?: boolean
}

const { title, description, path, disableOgp } = Astro.props
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

        { !disableOgp && <>
            <meta name="description" content={description || "ふぁぼんの週記"} />
            <meta property="og:title" content={title} />
            <meta property="og:description" content={description || "ふぁぼんの週記"} />
            <meta property="og:url" content={new URL(path, Astro.site).toString()} />
            <meta name="twitter:card" content="summary" />
            <meta name="twitter:site" content="@syobon_hinata" />
        </> }
        <title>{title}</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.6/dist/katex.min.css" integrity="sha384-ZPe7yZ91iWxYumsBEOn7ieg8q/o+qh/hQpSaPow8T6BwALcXSCS6C6fSRPIAnTQs" crossorigin="anonymous">
	</head>
	<body>
        <header>
            <h1><a href="/" class="link-top">Hebdomadary</a></h1>
            <p>ふぁぼんの週記</p>
        </header>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: 'Roboto', sans-serif;
	}
	code {
		font-family: monospace;
	}
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }
    main {
        max-width: 1000px;
        margin: auto;
    }
</style>

<style>
    header {
        text-align: center;
        margin-block-end: 4rem;
    }
    .link-top {
        color: inherit;
        text-decoration: none;
        font-size: 1.5rem;
    }
</style>
